html, body
  width: 100%
  height: 100%
body
  font-family: 'Roboto', sans-serif
  color: #FFF
  background: #202020
  overflow-x: hidden
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  margin: 0
a
  color: #1ED760
  text-decoration: none
a:hover
  text-decoration: underline
header
  width: 100%
  margin: 0 auto
  text-align: center
  flex-wrap: wrap
  align-items: center;
  justify-content: center; 
  h1
    font-size: 4em
    margin: 0 0 7px 0
  p
    margin: 0
h2
  display: block
  font-size: 1.8em
  margin-bottom: 7px
.wrapper
  width: 80%
  margin: 0 auto
  h1
    margin-top: 15px

.hero
  background: linear-gradient(
    rgba(0, 0, 0, 0.6), 
    rgba(0, 0, 0, 0.6)
  ),
  url(../images/hero.jpg) no-repeat center center fixed
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover
  width: 100%
  height: 100%
  header
    left: 25%
    width: 50%
    height: 50%
    top: 25%
    position: absolute
    text-align: center
    h1
      font-size: 6em
    p
      font-size: 1.5em
      font-weight: bold

.jumbotron
  background: linear-gradient(
    rgba(0, 0, 0, 0.6), 
    rgba(34, 34, 34, 1)
  ),
  url(../images/hero.jpg) no-repeat center center fixed
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover
  width: 100%
  padding: 20px 0

.form-container
  margin: 20px
  text-align: center
.auth-form
  display: inline-block
  text-align: center
  span.label
    textarea
      display: block
  input
    padding: 15px 25px
    color: #FFF
    font-weight: bold
    background: #1ED760
    border: 0
    border-radius: 5px
    font-size: 1em
    transition: 0.3s
    margin: 5px 0
    border-radius: 500px;
    display: block
    text-transform: uppercase
  input:hover
    background: #1fef69
    cursor: pointer
    transition: 0.3s

.genres
  list-style: none
  padding: 0
  li
    background: #777
    border-radius: 500px
    padding: 3px 10px
    margin: 5px 5px 0px 0px
    font-size: 12px
    line-height: 16px
    font-style: italic
    color: #FFF
    display: inline-block

footer
  width: 100%
  text-align: center
  margin: 0 auto
  p
    font-size: 0.9em
.sticky-footer
  position: absolute
  bottom: 5px

.data
  border-collapse: separate
  border-spacing: 0 0.8em
  width: 100%
  thead
    tr
      td
        font-weight: bold
        padding: 7px
  tr
    outline: 1px solid #444
    padding: 5px 0
    background: #333
    text-align: center
    img
      width: 100px
      height: 100px
  td
    border-right: 1px solid #444
  .rank
    font-size: 1.5em
    font-weight: bold
  .art
    width: 100px
    padding: 0
  td:last-child
    border-right: 0
  a
    display: block
    max-height: 100px
  p.dim
    display: inline-block
    color: #BBB

.animated
  	-webkit-animation-duration: 1s
  	animation-duration: 1s
  	-webkit-animation-fill-mode: both
  	animation-fill-mode: both
.animated.infinite
  	-webkit-animation-iteration-count: infinite
  	animation-iteration-count: infinite
@-webkit-keyframes fadeInDown
	from
    	opacity: 0
    	-webkit-transform: translate3d(0, -100%, 0)
    	transform: translate3d(0, -100%, 0)
  	to
    	opacity: 1
    	-webkit-transform: none
    	transform: none
@keyframes fadeInDown
  	from
    	opacity: 0
    	-webkit-transform: translate3d(0, -100%, 0)
    	transform: translate3d(0, -100%, 0)
  	to
    	opacity: 1
    	-webkit-transform: none
    	transform: none
.fadeInDown
  	-webkit-animation-name: fadeInDown
  	animation-name: fadeInDown