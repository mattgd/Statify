body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  color: #222
a
  color: #00B7FF
header
  margin: 10px 0
  h1
    font-size: 3em
    margin: 0
  p
    margin: 0

textarea
  border-radius: 5px
  border-color: #1ED760
  outline: none
  padding: 7px
  font-size: 1em
  resize: vertical
  width: 50%

form.input-form
  span.label
    textarea
      display: block
  input
    padding: 10px
    background: #1ED760
    border: 0
    border-radius: 5px
    font-size: 1em
    transition: 0.3s
    margin: 5px 0
  input:hover
    background: #1fef69
    cursor: pointer
    transition: 0.3s

div.track
  display: inline-block
div.track
  border: 1px #ddd solid
  background: #eee
  margin: 5px
  .track-image
    display: inline-block
    margin: 0
  .track-info
    margin-top: 22px
    padding: 0 10px
    float: right
    display: inline-block
    p
      margin: 0
    p.track-name
      font-weight: bold
    p.track-artists
      font-style: italic