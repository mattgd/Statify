html, body
  width: 100%
  height: 100%
body
  font-family: 'Roboto', sans-serif
  color: #FFF
  background: #202020
  overflow-x: hidden
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
a
  color: #1ED760
header
  width: 100%
  margin: 0 auto
  text-align: center
  flex-wrap: wrap
  align-items: center;
  justify-content: center; 
  h1
    font-size: 4em
    margin: 15px 0 7px 0
  p
    margin: 0
h2
  display: block
  font-size: 1.8em
  margin-bottom: 7px
.wrapper
  width: 80%
  margin: 0 auto

.form-container
  margin: 20px
  text-align: center
.auth-form
  display: inline-block
  text-align: center
  span.label
    textarea
      display: block
  input
    padding: 10px 20px
    color: #FFF
    font-weight: bold
    background: #1ED760
    border: 0
    border-radius: 5px
    font-size: 1em
    transition: 0.3s
    margin: 5px 0
    border-radius: 500px;
    display: block
  input:hover
    background: #1fef69
    cursor: pointer
    transition: 0.3s

.genres
  list-style: none
  padding: 0
  li
    background: #eeeeee
    border-radius: 500px
    padding: 3px 10px
    margin: 10px 10px 0px 0px
    font-size: 12px
    line-height: 16px
    font-style: italic
    color: #868e96
    display: inline-block

.cards
  display: flex
  flex-wrap: wrap
  justify-content: space-evenly

.card
  margin: 9px;
  flex: 0 1 18%
  border: 2px #FFF solid
  background: #FFF
  color: #222
  position: relative
  .card-image
    img
      width: 100%
      height: auto
  .card-content
    padding: 10px
    width: 100%
    p
      margin: 0
      flex: 1 0 auto
    .small
      font-size: 13px
    .medium
      font-size: 14px
    p.title
      font-weight: bold
    a
      text-decoration: none
      color: #222
    a:hover
      text-decoration: underline
  span.badge
    position: absolute
    top: -12px
    left: -14px
    padding: 3px 9px
    border-radius: 500px
    background: #1fef69

progress
  display: block
  width: 100%
  border: 0
  background: #eee

progress::-moz-progress-bar
  background: #1fef69

@media screen and (-webkit-min-device-pixel-ratio:0)
  progress
    height: 20px

progress::-webkit-progress-bar
    background: transparent

progress::-webkit-progress-value 
  background: #1fef69