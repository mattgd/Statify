html, body
  width: 100%
  height: 100%
body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  color: #FFF
  background: #202020
a
  color: #00B7FF
header
  width: 100%
  margin: 0 auto
  text-align: center
  flex-wrap: wrap
  align-items: center;
  justify-content: center; 
  h1
    font-size: 3em
    margin: 7px
  p
    margin: 0
h2
  display: block

.form-container
  margin: 20px 
.auth-form
  margin: 0 auto
  text-align: center
  span.label
    textarea
      display: block
  input
    padding: 10px 20px
    color: #FFF
    font-weight: bold
    background: #1ED760
    border: 0
    border-radius: 5px
    font-size: 1em
    transition: 0.3s
    margin: 5px 0
    border-radius: 500px;
    display: block
  input:hover
    background: #1fef69
    cursor: pointer
    transition: 0.3s

.container
  display: flex
  align-items: center;
  justify-content: center;
  flex-flow: row wrap
  
.genres
  list-style: none
  padding: 0
  li
    background: #eeeeee
    border-radius: 500px
    padding: 3px 10px
    margin: 10px 10px 0px 0px
    font-size: 12px
    line-height: 16px
    font-style: italic
    color: #868e96
    display: inline-block
    
.artist
  display: inline-block
  flex-basis: 20%
  border: 2px #FFF solid
  background: #FFF
  color: #222
  width: calc(100% * (1/4) - 5px - 2px);
  margin: 5px
  .artist-image
    margin: 0
    img
      width: 100%
  .artist-info
    margin-top: 22px
    padding: 0 10px
    width: 100%
    p
      margin: 0
    p.artist-name
      font-weight: bold
    p.artist-artists
      font-style: italic